<공을 시간에 따라 움직이게 하기>
------------------------------------------------------------------------------------------------------------------------------------
<배운점>
-windows.h 라이브러리안의 함수몇개를 배웠다.
------------------------------------------------------------------------------------------------------------------------------------
#include<stdio.h>
#include<Windows.h>

main() {
	HDC hdc = GetWindowDC(GetForegroundWindow());
	int x = 30, y = 300;	// 공의 초기위치
	int vx = 50, vy = -50;	// 공의 초기속도 
	
	MoveToEx(hdc, 30, 300, NULL);
	LineTo(hdc, 500, 300);

	for (int i = 0; i < 10; i++) {
		vy += 10;
		x += vx;
		y += vy;

		Ellipse(hdc,x, y, x + 10, y + 10);
		Sleep(1000);
	}
}

------------------------------------------------------------------------------------------------------------------------------------
